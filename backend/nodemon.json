{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": ["node_modules", "dist", "*.test.ts"],
  "exec": "node --env-file=.local.env dist/app.js",
  "restartable": "rs",
  "colours": true,
  "verbose": true,
  "delay": 1000,
  "runOnChangeOnly": false,
  "events": {
    "start": "echo 'App has started'",
    "crash": "echo 'App has crashed'",
    "restart": "echo 'App restarted due to file changes'"
  }
}